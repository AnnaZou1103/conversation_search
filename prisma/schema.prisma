generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url       = env("MONGODB_PRISMA_URL") // uses connection pooling
  directUrl = env("MONGODB_URL_NON_POOLING") // uses a direct connection
}

//
// Storage of Linked Data
//
model LinkStorage {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  ownerId    String @unique
  visibility LinkStorageVisibility

  dataType  LinkStorageDataType
  dataSize  Int
  data      Json

  // Study ID - associated with conversations for research tracking
  studyId String?
  
  // Search topic - topic for conversational search (also stored in data, but kept here for querying)
  searchTopic String?

  upVotes    Int @default(0)
  downVotes  Int @default(0)
  flagsCount Int @default(0)
  readCount  Int @default(0)
  writeCount Int @default(1)

  // time-based expiration
  expiresAt DateTime?

  // manual deletion
  deletionKey String
  isDeleted   Boolean   @default(false)
  deletedAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum LinkStorageVisibility {
  PUBLIC
  UNLISTED
  PRIVATE
}

enum LinkStorageDataType {
  CHAT_V1
}
